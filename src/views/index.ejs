<!DOCTYPE html>
<html lang="es">

<head>
    <%- include ("partials/head.ejs"); %>
    <title>Hello World</title>
</head>

<body>

    <div class="container p-4">
        <div class="row">
            <% books.forEach(function (book){ %>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <%= book.title %> / <%= book.author %>
                    </div>
                    <div class="card-body">
                        <p><%= book.description %></p>
                    </div>
                    <div class="footer">
                        <button class="btn btn-danger">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</body>

</html>